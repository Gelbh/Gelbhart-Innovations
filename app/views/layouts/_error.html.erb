<!-- Page content -->
<section class="d-flex align-items-center min-vh-100 bg-light bg-faded-primary">
  <div class="container text-md-start text-center">
    <div class="row align-items-center">

      <!-- Animation -->
      <div class="col-xl-6 col-md-7 order-md-2 ms-n5">
        <lottie-player src="<%= asset_path("error.json") %>" background="transparent" speed="1" loop autoplay></lottie-player>
      </div>

      <!-- Text -->
      <div class="col-md-5 offset-xl-1 order-md-1">
        <h1 class="display-1 mb-sm-4 mt-n4 mt-sm-n5"><%= @heading %></h1>
        <p class="mb-md-5 mb-4 mx-md-0 mx-auto pb-2 lead"><%= @message %></p>
        <a href="<%= root_path %>" class="btn btn-lg btn-primary shadow-primary w-sm-auto w-100">
          <i class="bx bx-home-alt me-2 ms-n1 lead" role="none"></i>
          Go to homepage
        </a>
      </div>
    </div>
  </div>
</section>
<!-- Jarallax -->
<%= render 'shared/jarallax' %>

<div class="bg-secondary">
  <!-- Breadcrumb -->
  <%= render 'shared/breadcrumb' %>

  <!-- Page title + Services grid -->
  <section class="container pb-2 pb-md-4 pb-lg-5">
    <h1 class="pb-4">Services</h1>
    <div class="row row-cols-1 row-cols-md-2">

      <!-- Items -->
      <% for service in @services do %>
        <div class="col py-4 my-2 my-sm-3">
          <a class="card card-hover h-100 border-0 shadow-sm text-decoration-none pt-5 px-sm-3 px-md-0 px-lg-3 pb-sm-3 pb-md-0 pb-lg-3 me-xl-2">
            <div class="card-body pt-3">
              <div class="d-inline-block shadow rounded-3 position-absolute top-0 translate-middle-y">
                <img src="<%= asset_path(service[1]) %>" class="d-block m-1" width="100" alt="Icon">
              </div>
              <h2 class="h4 d-inline-flex align-items-center">
                <%= service[0] %>
              </h2>
              <h3 class="h6 d-block align-items-center">
                <%= service[2] %>
              </h3>
              <p class="fs-sm text-body mb-0"><%= service[3] %></p>
            </div>
          </a>
        </div>
      <% end %>

    </div>
  </section>
</div>
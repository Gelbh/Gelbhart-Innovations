<!-- Navbar -->
<!-- Remove "navbar-sticky" class to make navigation bar scrollable with the page -->
<header class="header navbar navbar-expand-lg navbar-sticky d-flex flex-column shadow-sm <%= 'position-absolute' if current_page?(root_path) || controller.controller_name == "errors" %>">
  <div class="container">
    <a class="d-block navbar-brand me-lg-5" href="<%= root_path %>" >
      <img src="<%= asset_path("logo.png") %>" width="47" alt="Eldan Molecular Imaging">
      <span class="d-none d-md-inline d-lg-none d-xl-inline">Gelbhart Innovations</span>
      <span class="d-md-none d-lg-inline d-xl-none">Gelbhart</span>
    </a>
    <div id="navbarNav" class="offcanvas offcanvas-end">
      <div class="offcanvas-header border-bottom">
        <h5 class="offcanvas-title">Menu</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <ul class="navbar-nav">
          <li class="nav-item"><a href="<%= services_path %>" class="nav-link <%= is_active(services_path) %>">Services</a></li>
          <li class="nav-item"><a href="<%= team_path %>" class="nav-link <%= is_active(team_path) %>">Team</a></li>
          <li class="nav-item"><a href="<%= contact_path %>" class="nav-link <%= is_active(contact_path) %>">Contact Us</a></li>
        </ul>
      </div>
    </div>
    <div class="form-check form-switch mode-switch ms-auto" data-bs-toggle="mode">
      <input type="checkbox" class="form-check-input" id="theme-mode">
      <label class="form-check-label" for="theme-mode"><i class='bx bx-bulb'></i></label>
      <label class="form-check-label" for="theme-mode"><i class='bx bxs-bulb'></i></label>
    </div>
    <button type="button" class="navbar-toggler ms-4" data-bs-toggle="offcanvas" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</header>